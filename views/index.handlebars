<ul>
  {{#each records}}
  <li>
    {{ this.name }}, {{ this.category }}, {{ this.amount }}, {{ this.date }}, {{ this.categoryIcon }}
    <a href="./records/{{ this._id }}/edit">修改</a>
    <form action="./records/{{ this._id }}/delete" method="POST" style="display: inline;">
      <button type="submit">刪除</button>
    </form>
  </li>
  {{/each}}
</ul>

