<div class="container d-flex justify-content-center">
  <form action="/records" method="POST" class="col-6">
    <div class="form-group-label row" style="margin-bottom: 30px;">
      <label class="col-4">*必填欄位</label>
      <label class="col-8">請輸入你的支出</label>
    </div>
    <div class="form-group row">
      <label class="col-4 d-flex align-items-center" for="inputName">項目名稱*：</label>
      <input name="name" id="inputName" type="text" class="form-control col-8 formInput" required>
    </div>
    <div class="form-group row">
      <label class="col-4 d-flex align-items-center" for="inputDate">日期*：</label>
      <input name="date" id="inputDate" type="date" class="form-control col-8 formInput" required>
    </div>
    <div class="form-group row">
      <label class="col-4 d-flex align-items-center" for="inputCategory">類別*：</label>
      <select name="category" class="form-control col-8 formInput" id="inputCategory" required>
        {{#each categories}}
        <option value={{ this.category }}>{{ this.category }}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group row">
      <label class="col-4 d-flex align-items-center" for="inputAmount">金額*：</label>
      <input name="amount" type="number" class="form-control col-8 formInput" id="inputAmount" required>
      <small id="amountHelp" class="form-text text-muted">請輸入有效數字</small>
    </div>
    <div class="form-group row d-flex justify-content-center">
      <button type="submit" class="btn urlBtn">新增支出</button>
    </div>
  </form>
</div>